html, body, div, span, h1, h2, h3, p, em, img
  margin 0px
  padding 0
  border 0
  outline 0
  font-size 100%
  box-sizing border-box
  background transparent
  vertical-align baseline

body
  background $bgcolor
  color $contenttext


#container
  width 100%
  max-width 980px
  margin 2em auto 2em auto


header
  position relative

  img
    max-width 100%
    margin 0 auto
    padding 0

  h1
    position absolute
    top 227px
    left 0px
    width 100%
// header


#tab-container
  background $navbar

#content
  padding 1em 2em
  clear both
  width 100%
  background $content
  overflow auto
  border 2px solid $navbar
  border-top 0px

.tab_content
  display none

.left
  width 62%
  display inline-block
  vertical-align top

.left50
  width 48%
  display inline-block
  vertical-align top

.right50
  width 48%
  display inline-block
  vertical-align top
  margin-left 15px
  text-align left

.contact_right
  text-align center

.right
  width 36%
  display inline-block
  vertical-align top
  text-align center


.right p
  text-align left


