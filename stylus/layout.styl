#facebook img
  border 0
  width 50px

.left img,
.right img,
  width 100%
  max-width 200px
  margin 0 auto 10px auto
  border 1px solid $imgBorder

.left50 img
  max-width 400px

.right50 img
  max-width 400px

.wide
  width 95%

table
  border-collapse collapse
  border 2px solid $tablehead
  border-spacing 0
  border-bottom 18px solid $tablehead
  background $tablebg
  width 85%
  margin 0 auto 1em auto

th, td
  color $contenttext
  border 1px solid $tablehead
  padding 0.5em 1em
  border-collapse collapse

th
  background $tablehead
  color $tableHeadText
  &.last
    border-right: none
  // text-transform: uppercase;
  // font-size: 1em;
  // text-align: center;

.fancy_tr
  background $tablehead
  color $tableHeadText
  font-size 1em
  text-align: center
  &.last
    border-right none


#gallery
  overflow auto
  margin 0 auto
  text-align center

  img
    max-width 100%
    overflow auto
    margin 0 auto
    float none
    border 1px solid $navbar
// #gallery


#info
  background-color $content
  color black
  text-align center
  border-left 2px solid $navbar
  border-right 2px solid $navbar
  clear both
  // float clear
  padding 10px 0 5px 0

.map
  height 200px
  width 100%
  max-width 500px
  border 1px solid black
  max-height 400px
  margin-bottom 0.25em
  margin-top -0.7em


@media screen and (max-width: 825px) {
  h1 {
  position: absolute;
  top: 180px;
  left: 5px;
  width: 95%;
  font-size: 1.25em;
  }
}


@media screen and (max-width: 655px) {
  .left50,
  .right50 {
    width: 99%;
    display: block;
    margin-left: 0px;
  }
}


@media screen and (max-width: 550px) {
  h1 {
  position: relative;
  top: 0px;
  text-align: center;
  padding-bottom: 10px;
  }


